@model IEnumerable<Hub.Domain.Entities.ServiceType>

@{
    ViewBag.Title = "Service Types";
}

<h1>Service <span>Types</span></h1>

<p>
    @Html.ActionLink("Create", "Create")
</p>
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Document
        </th>
        <th>
            Image
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsDocument)
        </td>
        <td>
            <img src="@item.Image" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
