@model Hub.Domain.Entities.UserSubscription
@{
    ViewBag.Title = "Edit User Subscription";
}
<h1>Edit <span>User Subscription</span></h1>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.UserID)
        @Html.HiddenFor(model => model.ServiceID)
        <div class="editor-field">
            @Html.DisplayFor(model => model.User.FullName)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.Service.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EndDate)
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
}
<div>
    @Html.ActionLink("Back to List", "Index", new { userID = Model.UserID })
</div>
